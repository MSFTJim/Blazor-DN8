@page "/"
@rendermode InteractiveServer

<PageTitle>Home 2</PageTitle>

<br />

<button class="btn btn-primary" @onclick="()=> theModal!.Open()"> Click here to open The Modal</button>
<br />
<br />
<h3> Return value from TheModal: @resultfrommodal </h3>

<TheModal EventCallbackToParentMethod="ResultFromTheModal" @ref="theModal">
  <Title> This is our component Title</Title>
  <Body> Please confirm your choice!</Body>
</TheModal>


@code {
    
    private TheModal? theModal { get; set; }
    
    private string resultfrommodal = "";

    private void ResultFromTheModal(string result)
    {
        resultfrommodal = result;
    }

    
}

